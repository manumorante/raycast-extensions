{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bitmoji",
  "title": "Bitmoji",
  "description": "Your own personal emoji",
  "icon": "icon.png",
  "author": "manumorante",
  "categories": [
    "Fun"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "search-emojis",
      "title": "Emojis",
      "description": "Search Emojis",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.75.2",
    "@raycast/utils": "^1.15.0",
    "image-downloader": "^4.3.0",
    "run-applescript": "^7.0.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "preferences": [
    {
      "name": "myID",
      "description": "My Bitmoji ID",
      "type": "textfield",
      "required": true,
      "title": "My ID"
    },
    {
      "name": "columns",
      "description": "Columns for the grid",
      "type": "dropdown",
      "required": false,
      "title": "Columns",
      "default": "5",
      "data": [
        {
          "title": "Small",
          "value": "6"
        },
        {
          "title": "Medium",
          "value": "5"
        },
        {
          "title": "Big",
          "value": "4"
        }
      ]
    },
    {
      "name": "showTooltip",
      "description": "Show Tooltip",
      "type": "checkbox",
      "required": false,
      "title": "Tooltip",
      "label": "Show description when hover in emoji",
      "default": true
    }
  ]
}
